@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class = "input-group">
            <input type = "search" class = "form-control" asp-for="SearchTerm"/>
            <span class = "input-group-btn">
                <button class = "btn btn-default">
                    Search
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
    <tr>
        <td>@restaurant.Name</td>
        <td>@restaurant.Location</td>
        <td>@restaurant.Cuisine</td>
        <td>
            <a class="btn btn-details" asp-page="./Detail" asp-route-restaurantID = "@restaurant.ID">Details</a>
            <a class="btn btn-details" asp-page="./Edit" asp-route-restaurantID = "@restaurant.ID">Edit</a>
        </td>
    </tr>
    }
</table>

<a class="btn btn-primary" asp-page="./Edit">Create New</a>



