@using OdeToFood.Core
@model Restaurant

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.Name</h3>
    </div>
    <div class="panel-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="panel-footer">
        <a class="btn btn-details" asp-page="./Detail" asp-route-restaurantID="@Model.ID">Details</a>
        <a class="btn btn-details" asp-page="./Edit" asp-route-restaurantID="@Model.ID">Edit</a>
        <a class="btn btn-danger" asp-page="./Delete" asp-route-restaurantID="@Model.ID">Delete</a>
    </div>
</div>
