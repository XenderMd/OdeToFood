@using OdeToFood.Core
@model Restaurant

<div class="card card-summary">
    <div class="card-header">
        <h3 class="card-title">@Model.Name</h3>
    </div>
    <div class="card-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Location: @Model.Location</li>
            <li class="list-group-item">Cuisine: @Model.Cuisine</li>
        </ul>
    </div>
    <div class="card-footer">
        <a asp-page="./Detail" asp-route-restaurantID="@Model.ID"><i class="fas fa-info-circle"></i></a>
        <a asp-page="./Edit" asp-route-restaurantID="@Model.ID"><i class="far fa-edit"></i></a>
        <a asp-page="./Delete" asp-route-restaurantID="@Model.ID"><i class="fas fa-trash-alt"></i></a>
    </div>
</div>
